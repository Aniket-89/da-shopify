{% comment %}Image Banner Section with Desktop and Mobile Images{% endcomment %}
<section id="image-banner-{{ section.id }}" class="image-banner">
    <div class="image-container">
      {% if section.settings.banner_image != blank %}
        {%- comment %} Desktop Image {% endcomment -%}
        <picture>
          {% if section.settings.mobile_banner_image != blank %}
            {{ section.settings.mobile_banner_image | image_url: width: 768 | image_tag: 
              class: 'banner-image banner-image--mobile', 
              loading: 'lazy', 
              alt: section.settings.mobile_banner_image.alt | escape 
            }}
          {% endif %}
          
          {{ section.settings.banner_image | image_url: width: 2000 | image_tag: 
            class: 'banner-image banner-image--desktop', 
            loading: 'lazy', 
            alt: section.settings.banner_image.alt | escape 
          }}
        </picture>
      {% else %}
        <div class="image-placeholder">No image selected</div>
      {% endif %}
    </div>
  
    <div class="overlay" style="
      background-color: {{ section.settings.overlay_color }};
      opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    "></div>
  
    <div class="image-banner-content {{ section.settings.text_color }}" style="text-align: {{ section.settings.text_alignment }};">
      <h2 class="image-banner-subtitle">{{ section.settings.subtitle }}</h2>
      <h1 class="image-banner-title">{{ section.settings.title }}</h1>
      <p class="image-banner-description">{{ section.settings.description }}</p>
      
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="image-banner-button" style="
          background-color: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
        ">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "header",
        "content": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Desktop Banner Image"
      },
      {
        "type": "header",
        "content": "Mobile Image (Optional)"
      },
      {
        "type": "image_picker",
        "id": "mobile_banner_image",
        "label": "Mobile Banner Image",
        "info": "If not selected, desktop image will be used on mobile"
      },
      {
        "type": "header",
        "content": "Overlay Settings"
      },
      {
        "type": "color",
        "id": "overlay_color",
        "label": "Overlay Color",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Overlay Opacity",
        "default": 50
      },
      {
        "type": "header",
        "content": "Content Settings"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your Subtitle Here"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Welcome to Our Store"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Explore our latest collections"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" },
          { "value": "right", "label": "Right" }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "text_color",
        "label": "Text Color",
        "options": [
          { "value": "text-primary", "label": "Primary" },
          { "value": "text-secondary", "label": "Secondary" },
          { "value": "text-body", "label": "Body" },
          { "value": "text-white", "label": "White" }
        ],
        "default": "center"
      }
    ],
    "presets": [
      {
        "name": "Image Banner",
        "category": "Image"
      }
    ]
  }
  {% endschema %}
  
  <style>
    .image-banner {
      position: relative;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }
  
    .image-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  
    .banner-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      position: absolute;
      top: 0;
      left: 0;
    }
  
    .banner-image--desktop {
      display: block;
    }
  
    .banner-image--mobile {
      display: none;
    }
  
    .image-placeholder {
      position: absolute;
      width: 100%;
      height: 100%;
      background: black;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2rem;
    }
  
    .overlay {
      position: absolute;
      width: 100%;
      height: 100%;
    }
  
    .image-banner-content {
      position: absolute;
      top:20%;
      z-index: 2;
      max-width: 80%;
      padding: 0 20px;
    }
  
    .image-banner-title {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 15px;
    }
  
    .image-banner-subtitle {
      font-size: 1.5rem;
      opacity: 0.8;
      margin-bottom: 10px;
    }
  
    .image-banner-description {
      font-size: 1.2rem;
      margin-bottom: 20px;
    }
  
    @media screen and (max-width: 768px) {
      .image-banner {
        {% comment %} height: 500px; {% endcomment %}
      }
  
      .banner-image--desktop {
        display: none;
      }
  
      .banner-image--mobile {
        display: block;
      }
  
      .image-banner-title {
        font-size: 2rem;
      }
  
      .image-banner-subtitle {
        font-size: 1.2rem;
      }
  
      .image-banner-description {
        font-size: 1rem;
      }
    }
  </style>