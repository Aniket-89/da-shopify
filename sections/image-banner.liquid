{% comment %}Image Banner Section with Customizable Overlay{% endcomment %}
<section id="image-banner-{{ section.id }}" class="image-banner">
    <div class="image-container">
      {% if section.settings.banner_image != blank %}
        {{ section.settings.banner_image | image_url: width: 2000 | image_tag: 
          class: 'banner-image', 
          loading: 'lazy', 
          alt: section.settings.banner_image.alt | escape 
        }}
      {% else %}
        <div class="image-placeholder">No image selected</div>
      {% endif %}
    </div>
  
    <div class="overlay" style="
      background-color: {{ section.settings.overlay_color }};
      opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    "></div>
  
    <div class="image-banner-content" style="text-align: {{ section.settings.text_alignment }};">
      <h2 class="image-banner-subtitle">{{ section.settings.subtitle }}</h2>
      <h1 class="image-banner-title">{{ section.settings.title }}</h1>
      <p class="image-banner-description">{{ section.settings.description }}</p>
      
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="image-banner-button" style="
          background-color: {{ section.settings.button_bg_color }};
          color: {{ section.settings.button_text_color }};
        ">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </section>
  
  {% schema %}
  {
    "name": "Image Banner",
    "settings": [
      {
        "type": "header",
        "content": "Image Settings"
      },
      {
        "type": "image_picker",
        "id": "banner_image",
        "label": "Banner Image"
      },
      {
        "type": "header",
        "content": "Overlay Settings"
      },
      {
        "type": "color",
        "id": "overlay_color",
        "label": "Overlay Color",
        "default": "#000000"
      },
      {
        "type": "range",
        "id": "overlay_opacity",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "%",
        "label": "Overlay Opacity",
        "default": 50
      },
      {
        "type": "header",
        "content": "Content Settings"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Your Subtitle Here"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Welcome to Our Store"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "Explore our latest collections"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text Alignment",
        "options": [
          { "value": "left", "label": "Left" },
          { "value": "center", "label": "Center" },
          { "value": "right", "label": "Right" }
        ],
        "default": "center"
      },
      {
        "type": "header",
        "content": "Button Settings"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button Background Color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "button_text_color",
        "label": "Button Text Color",
        "default": "#000000"
      }
    ],
    "presets": [
      {
        "name": "Image Banner",
        "category": "Image"
      }
    ]
  }
  {% endschema %}
  
  <style>
    .image-banner {
      position: relative;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
    }
  
    .image-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  
    .banner-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  
    .image-placeholder {
      position: absolute;
      width: 100%;
      height: 100%;
      background: black;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-size: 2rem;
    }
  
    .overlay {
      position: absolute;
      width: 100%;
      height: 100%;
    }
  
    .image-banner-content {
      position: relative;
      z-index: 2;
      max-width: 80%;
      padding: 0 20px;
    }
  
    .image-banner-title {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 15px;
    }
  
    .image-banner-subtitle {
      font-size: 1.5rem;
      opacity: 0.8;
      margin-bottom: 10px;
    }
  
    .image-banner-description {
      font-size: 1.2rem;
      margin-bottom: 20px;
    }
  
    .image-banner-button {
      display: inline-block;
      padding: 12px 24px;
      text-decoration: none;
      border-radius: 4px;
      transition: opacity 0.3s;
    }
  
    .image-banner-button:hover {
      opacity: 0.8;
    }
  
    @media screen and (max-width: 768px) {
      .image-banner {
        height: 500px;
      }
  
      .image-banner-title {
        font-size: 2rem;
      }
  
      .image-banner-subtitle {
        font-size: 1.2rem;
      }
  
      .image-banner-description {
        font-size: 1rem;
      }
    }
  </style>